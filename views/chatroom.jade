extends layout


block content
  ul(id="messages-window")
  
  div(class='container')
    form(action="",class="messagebox")
      div(class='row')
        div(class='input-feild col s8')
          input(id="m"  autofocus="true"  autocomplete="off",class='messagebox')
          a(class="waves-effect waves-light btn modal-trigger" href="#modal2")
           |Modal

        button(class="col btn-large waves-effect waves-light teal lighten-1 messagebox") 
         |Send
  
  div(id="modal1", class="modal")
    div(class="modal-content")
      h4
       |What sould we call you?
      form(class="col s12")
        div(class="row")
          div(class="input-field col s12")
            i(class="material-icons prefix")
              |account_circle
            input(id="username", value= '#{name}', type="text", class="validate")
            label(class="active" for="username")
              |First Name
    div(class="modal-footer")
      a(href="#!", class=" modal-action modal-close waves-effect waves-green btn-flat")
        |okay.
  
  div(id="modal2" class="modal bottom-sheet")
    div(class="modal-content")
      h4
       |Modal Header
      p
       |A bunch of text



